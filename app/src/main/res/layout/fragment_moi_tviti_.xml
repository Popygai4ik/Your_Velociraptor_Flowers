<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:gbp="http://schemas.android.com/apk/res-auto">

    <!-- Навигационный бар сверху -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="?android:attr/colorPrimary">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:text="Мои цветы"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
        <ImageButton
            android:id="@+id/weatherButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_weather"
            android:background="?android:attr/selectableItemBackground"
            android:padding="6dp"
            android:scaleType="fitCenter"/>

        <!-- Кнопка поиска -->
        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/poisk_flower_7387574"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:scaleType="fitCenter"/>

        <!-- Профиль -->
        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_user_profile_2734847"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:scaleType="fitCenter"/>

        <!-- Уведомления -->
        <ImageButton
            android:id="@+id/notificationButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_notification_3239952"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>


    <!-- Прогресс-бар загрузки -->
<!--    <ProgressBar-->
<!--        android:id="@+id/progressBar"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerInParent="true" />-->
    <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        gbp:type="chrome_floating_circles"/>

    <!-- RecyclerView для отображения данных -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigationBar"
        tools:listitem="@layout/item_my"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/navigationBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/free_icon_tulips_2541917" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Вам необходимо войти в профиль, чтобы увидеть ваши цветы!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:theme="@style/Base.CardView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Вам необходимо добавить цветы, чтобы увидеть ваши цветы!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:theme="@style/Base.CardView"
        tools:visibility="gone" />
    <Button
        android:id="@+id/registerButton"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Войти"
        android:textColor="@color/white" />


</RelativeLayout>
