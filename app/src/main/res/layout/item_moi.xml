<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatarCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/resinok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_notification_foreground"

                />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/opisanie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/name"
            app:layout_constraintStart_toEndOf="@+id/avatarCard"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Example name" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatarCard"
            app:layout_constraintTop_toBottomOf="@id/opisanie"
            tools:text="JOPAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAaAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" />

        <TextView
            android:id="@+id/lastWatered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Нет данных!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarCard" />

        <TextView
            android:id="@+id/nextWatered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Нет данных!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastWatered" />

        <Button
            android:id="@+id/moreButton"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Подробнее"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/delitButton" />

        <ImageButton
            android:id="@+id/illuminationButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:scaleType="fitCenter"

            android:src="@drawable/free_icon_illumination_5789137"
            app:layout_constraintEnd_toStartOf="@+id/delitButton"
            app:layout_constraintStart_toEndOf="@+id/moreButton"
            app:layout_constraintTop_toTopOf="@+id/delitButton" />

        <Button
            android:id="@+id/delitButton"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nextWatered" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>